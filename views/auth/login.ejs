<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>Login</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-LN+7fdVzj6u52u30Kp6M/trliBMCMKTyK833zpbD+pXdCLuTusPj697FH4R/5mcr" crossorigin="anonymous">
  <link rel="stylesheet" href="/css/style.css" />
  <script src="/js/showPassword.js"></script>
</head>
<body>
<%- include("../partials/navbar") %>
  <div class="container mt-5 login-block">
    <div class="row justify-content-center">
      <div class="col-md-6">
        <div class="signup-container login-block">
          <h2 class="text-center mb-4">Login</h2>
          <form action="/auth/login" method="post">
            <div class="mb-3">
              <label for="identifier" class="form-label">Username or Email:</label>
              <input type="text" name="identifier" id="identifier" class="form-control">
              <% if (errorMessages?.identifier) { %>
                <div class="text-danger small"><%= errorMessages.identifier %></div>
              <% } %>
            </div>

            <div class="mb-3">
              <label for="password" class="form-label">Password:</label>
              <div class="input-group">
                <input type="password" name="password" id="password" class="form-control">
                <button type="button" id="show-password" class="btn btn-outline-secondary">Show</button>
              </div>
              <% if (errorMessages?.password) { %>
                <div class="text-danger small"><%= errorMessages.password %></div>
              <% } %>
            </div>

            <% if (errorMessages?.general) { %>
              <div class="text-danger text-center mb-3"><%= errorMessages.general %></div>
            <% } %>

            <div class="text-center">
              <button type="submit" class="btn btn-primary w-50">Login</button>
            </div>
          </form>
        </div>

        <div class="text-center mt-3 signup-link">
          Donâ€™t have an account? <a href="/auth/sign-up">Sign Up</a>
        </div>
      </div>
    </div>
  </div>

</body>
</html>
