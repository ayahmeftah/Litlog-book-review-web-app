<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <link rel="stylesheet" href="/css/style.css" />
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="/js/showPassword.js"></script>
  <title>Sign Up</title>
</head>
<body style="background-color: #f3f1ec;">
  <%- include("../partials/navbar") %>

  <div class="container mt-5">
    <div class="row justify-content-center">
      <div class="col-md-6">
        <div class="signup-container">
          <h2 class="text-center mb-4">Sign Up</h2>
          <form action="/auth/sign-up" method="post" enctype="multipart/form-data">

            <div class="mb-3">
              <label for="name" class="form-label">Name:</label>
              <input type="text" class="form-control" name="name" id="name">
              <% if (errorMessages?.name) { %>
                <div class="text-danger small"><%= errorMessages.name %></div>
              <% } %>
            </div>
            <div class="mb-3">
              <label for="username" class="form-label">Username:</label>
              <input type="text" class="form-control" name="username" id="username">
              <% if (errorMessages?.username) { %>
                <div class="text-danger small"><%= errorMessages.username %></div>
              <% } %>
            </div>
            <div class="mb-3">
              <label for="email" class="form-label">Email:</label>
              <input type="text" class="form-control" name="email" id="email">
              <% if (errorMessages?.email) { %>
                <div class="text-danger small"><%= errorMessages.email %></div>
              <% } %>
            </div>
            <div class="row mb-3">
              <div class="col-md-6">
                <label for="role" class="form-label">Role:</label>
                <select name="role" id="role" class="form-select">
                  <option value="">Select Role</option>
                  <option value="author">Author</option>
                  <option value="reader">Reader</option>
                </select>
                <% if (errorMessages?.role) { %>
                  <div class="text-danger small"><%= errorMessages.role %></div>
                <% } %>
              </div>
              <div class="col-md-6">
                <label for="profilePic" class="form-label">Profile Picture (optional):</label>
                <input type="file" class="form-control" name="profilePic" id="profilePic">
              </div>
            </div>
            <div class="mb-3">
              <label for="password" class="form-label">Password:</label>
              <div class="input-group">
                <input type="password" class="form-control" name="password" id="password">
                <button type="button" id="show-password" class="btn btn-outline-secondary">Show</button>
              </div>
              <% if (passwordErrors?.length) { %>
                <ul class="small mt-2">
                  <% passwordErrors.forEach(error => { %>
                    <li class="text-danger"><%= error %></li>
                  <% }) %>
                </ul>
              <% } %>
            </div>

            <% if (errorMessages?.general) { %>
              <div class="text-danger text-center mb-3"><%= errorMessages.general %></div>
            <% } %>
              <div class="text-center">

                <button type="submit" class="btn btn-primary w-50">Sign Up</button>
              </div>
          </form>
        </div>
        <div class="text-center mt-3 signup-link">
          Already have an account? <a href="/auth/login">Login</a>
        </div>
      </div>
    </div>
  </div>

</body>
</html>