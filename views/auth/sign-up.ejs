<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <link rel="stylesheet" href="/css/style.css" />
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-LN+7fdVzj6u52u30Kp6M/trliBMCMKTyK833zpbD+pXdCLuTusPj697FH4R/5mcr" crossorigin="anonymous">
  <script src="/js/showPassword.js"></script>
  <title>Sign Up</title>
</head>
<body>
<%- include("../partials/navbar") %>

  <form action="/auth/sign-up" method="post">
    <h2>Sign Up</h2>

    <label for="name">Name:</label>
    <input type="text" name="name" id="name">
    <% if (errorMessages && errorMessages.name) { %>
      <p class="error"><%= errorMessages.name %></p>
    <% } %>

    <label for="username">Username:</label>
    <input type="text" name="username" id="username">
    <% if (errorMessages && errorMessages.username) { %>
      <p class="error"><%= errorMessages.username %></p>
    <% } %>

    <label for="email">Email:</label>
    <input type="text" name="email" id="email">
    <% if (errorMessages && errorMessages.email) { %>
      <p class="error"><%= errorMessages.email %></p>
    <% } %>

    <label for="role">Role:</label>
    <select name="role" id="role">
      <option value="">Select Role</option>
      <option value="author">Author</option>
      <option value="reader">Reader</option>
    </select>
    <% if (errorMessages && errorMessages.role) { %>
      <p class="error"><%= errorMessages.role %></p>
    <% } %>

    <label for="password">Password:</label>
    <input type="password" name="password" id="password">
    <button type="button" id="show-password" >Show</button>

    <% if (passwordErrors && passwordErrors.length > 0) { %>
      <ul class="requirements">
        <% passwordErrors.forEach(error => { %>
          <li style="color: red;"><%= error %></li>
        <% }) %>
      </ul>
    <% } %>

    <button type="submit">Sign Up</button>

    <% if (errorMessages && errorMessages.general) { %>
      <p class="error"><%= errorMessages.general %></p>
    <% } %>

    <p>Already have an account? <a href="/auth/login">Login</a></p>

  </form>

</body>
</html>