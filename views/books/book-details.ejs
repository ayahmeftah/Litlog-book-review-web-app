<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-LN+7fdVzj6u52u30Kp6M/trliBMCMKTyK833zpbD+pXdCLuTusPj697FH4R/5mcr" crossorigin="anonymous">
    <link rel="stylesheet" href="/css/style.css" />
    <title>
        <%= foundBook.title %>
    </title>
</head>
<body>
    <%- include("../partials/navbar") %>

        <div class="container book-detail-container">
            <div class="row align-items-start">

                <div class="col-md-4 d-flex flex-column align-items-center">
                    <img src="<%= foundBook.BookImage %>" alt="Book Cover" class="book-image-details mb-3" />
                    
                    <!-- buttons under the book cover image -->
                    <% if (user && user._id.toString()===foundBook.authorId._id.toString()) { %>
                        <div class="w-75 d-flex flex-column align-items-center">
                            <form action="/books/<%= foundBook._id %>/edit" method="get" class="w-100">
                                <button class="btn delete-edit-btn btn-warning py-3 w-100">Edit</button>
                            </form>
                            <form action="/books/<%= foundBook._id %>?_method=delete" method="post" class="w-100">
                                <button class="btn delete-edit-btn btn-danger py-3 w-100">Delete</button>
                            </form>
                        </div>
                    <% } else if (user) { %>

                            <button class="btn <%= btnClass %> shelf-btn btn w-75 py-3" data-bs-toggle="modal" data-bs-target="#shelfModal">
                            <%= label %>
                            </button>
                    <% } else if (!user) { %>
                            <form action="/auth/sign-up" method="get" class="w-75">
                                <button class="btn btn-outline-secondary shelf-btn py-3 w-100">
                                    Add to Shelf ▼
                                </button>
                            </form>
                            
                    <% } %>

                    <% if ( userBookList && (userBookList.status==="reading" || userBookList.status==="read" ) ) { %>
                            <button class="btn btn-info shelf-btn w-75 py-3" data-bs-toggle="modal" data-bs-target="#reviewModal">
                                <%= userReview ? "Edit Review" : "Add Review" %>
                            </button>
                            <% if (userReview) { %>
                                <form action="/books/<%= foundBook._id %>/reviews/<%= userReview._id %>?_method=DELETE" method="POST" class="w-75">
                                    <button type="submit" class="btn btn-info delete-edit-btn btn-danger py-3 w-100">Delete Review</button>
                                </form>
                            <% } %>

                    <% } %>
                </div>

                <!-- book details -->
                <div class="col-md-8 book-info">
                    <h2>
                        <%= foundBook.title %>
                    </h2>
                    <p>
                        <strong>Author:</strong>
                        <%= foundBook.authorId.name || foundBook.authorId.username %>
                    </p>
                    <p><strong>Average Rating:</strong>
                        <% if (foundBook.averageRating> 0) { %>
                            <span class="rating-badge">
                                <%= foundBook.averageRating.toFixed(1) %> / 5
                            </span>
                        <% } else { %>
                                <span class="text-muted">Not rated yet</span>
                        <% } %>
                    </p>
                    <p>
                        <strong>Year Published:</strong>
                        <%= foundBook.yearOfPublication %>
                    </p>
                    <p>
                        <strong>Genre:</strong>
                        <%= foundBook.genre %>
                    </p>
                    <p>
                        <strong>Description:</strong>
                        <%= foundBook.description %>
                    </p>
                    <% if (reviews.length > 0) { %>
                        <div class="mt-5">
                            <div class="d-flex justify-content-between align-items-center">
                            <h4>Recent Reviews</h4>
                            <% if (user) { %>
                                <a href="/books/<%= foundBook._id %>/reviews" class="btn btn-link">View More</a>
                            <% } else { %>
                                <a href="/auth/sign-up" class="btn btn-link">Sign Up to View More</a>
                            <% } %>
                        </div>
                        <% reviews.forEach(review => { %>
                            <div class="card mb-3 position-relative">
                                <div class="card-body">
                                    <div class="d-flex justify-content-between align-items-start">
                                        <div class="d-flex">
                                            <img src="<%= review.userId.profilePic %>" alt="<%= review.userId.username %> profile picture" class="rounded-circle img-thumbnail me-2 review-profile-img">
                                            <div class="d-flex flex-column justify-content-center">
                                                <strong><%= review.userId.name %></strong>
                                                <span class="text-muted small">@<%= review.userId.username %></span>
                                            </div>
                                        </div>

                                    <% if (userReview) { %>
                                        <form action="/books/<%= foundBook._id %>/reviews/<%= userReview._id %>?_method=delete" method="post" class="m-0">
                                            <button type="submit" class="btn btn-outline-danger btn-sm">Delete</button>
                                        </form>
                                    <% } %> 
                                </div>

                                <div class="mt-2">
                                    <% for (let i = 1; i <= 5; i++) { %>
                                        <span class="star"><%= i <= review.rating ? '★' : '☆' %></span>
                                    <% } %>
                                </div>

                                <p class="card-text mt-2"><%= review.comment %></p>
                                <p class="text-muted small"><%= review.createdAt.toLocaleDateString() %></p>
                            </div>
                        </div>
                    <% }) %>
            <% } else { %>
                <div class="mt-5">
                    <h4>Recent Reviews</h4>
                    <p class="text-muted">No reviews yet.</p>
                </div>
            <% } %>

        </div>
    </div>
</div>


        <!-- books list pop up -->
        <div class="modal fade" id="shelfModal" tabindex="-1" aria-labelledby="shelfModalLabel" aria-hidden="true">
            <div class="modal-dialog">
                <form action="/books/<%= foundBook._id %>/shelf" method="post" class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title">Choose a shelf for this book</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body d-grid gap-2">
                        <input type="hidden" name="bookId" value="<%= foundBook._id %>">

                        <% const current=userBookList?.status; %>
                            <button name="status" value="want to read"
                                class="btn <%= current === 'want to read' ? 'btn-primary text-white' : 'btn-outline-dark' %>">Want
                                to read</button>
                            <button name="status" value="reading"
                                class="btn <%= current === 'reading' ? 'btn-warning text-dark' : 'btn-outline-dark' %>">Currently reading</button>
                            <button name="status" value="read"
                                class="btn <%= current === 'read' ? 'btn-success text-white' : 'btn-outline-dark' %>">Read</button>

                            <% if (userBookList) { %>
                                <button name="status" value="remove" class="btn btn-outline-danger mt-2">Remove from shelf</button>
                            <% } %>
                    </div>
                </form>
            </div>
        </div>

        
        <div class="modal fade" id="reviewModal" tabindex="-1" aria-labelledby="reviewModalLabel" aria-hidden="true">
            <div class="modal-dialog">
                <form id="reviewForm" action="/books/<%= foundBook._id %>/reviews<%= userReview ? '/' + userReview._id + '?_method=put' : '' %>" method="post" class="modal-content">
                    <% if (userReview) { %>
                        <input type="hidden" name="_method" value="pust">
                    <% } %>
                    <div class="modal-header">
                        <h5 class="modal-title"><%= userReview ? 'Edit Your Review' : 'Add a Review' %></h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                    </div>

                    <div class="modal-body">
                        <label for="rating" class="form-label">Rating:</label>
                        <select class="form-select mb-3" name="rating" required>
                            <% for (let i=1; i <=5; i++) { %>
                                <option value="<%= i %>" <%=userReview?.rating===i ? 'selected' : '' %>><%= i %> Star<%=i> 1 ? 's' : '' %></option>
                            <% } %>
                        </select>

                        <label for="comment" class="form-label">Your Review:</label>
                        <textarea class="form-control" name="comment" rows="4" required><%= userReview?.comment || '' %></textarea>
                    </div>
                    <div class="modal-footer">
                        <button type="submit" class="btn btn-primary">
                            <%= userReview ? 'Update Review' : 'Submit Review' %>
                        </button>
                    </div>

                </div>


            </form>
        </div>
    </div>


    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/js/bootstrap.bundle.min.js" integrity="sha384-ndDqU0Gzau9qJ1lfW4pNLlhNTkCfHzAVBReH9diLvGRem5+R9g2FzA8ZGN954O5Q" crossorigin="anonymous"></script>
</body>

</html>