<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/css/bootstrap.min.css" />
    <link rel="stylesheet" href="/css/style.css" />
    <title>
        <%= foundBook.title %>
    </title>
</head>
<body>
    <%- include("../partials/navbar") %>

        <div class="container book-detail-container">
            <div class="row align-items-start">

                <div class="col-md-4 d-flex flex-column align-items-center">
                    <img src="<%= foundBook.BookImage %>" alt="Book Cover" class="book-image-details mb-3" />
                    
                    <!-- buttons under the book cover image -->
                    <% if (user && user._id.toString()===foundBook.authorId._id.toString()) { %>
                        <div class="w-75 d-flex flex-column align-items-center">
                            <form action="/books/<%= foundBook._id %>/edit" method="get" class="w-100 delete-edit-btn">
                                <button class="btn btn-warning py-3 w-100">Edit</button>
                            </form>
                            <form action="/books/<%= foundBook._id %>?_method=delete" method="post" class="w-100 delete-edit-btn">
                                <button class="btn btn-danger py-3 w-100">Delete</button>
                            </form>
                        </div>
                    <% } else if (user) { %>

                            <button class="btn <%= btnClass %> shelf-btn w-75 py-3" data-bs-toggle="modal" data-bs-target="#shelfModal">
                            <%= label %>
                            </button>
                    <% } %>

                </div>

                <!-- book details -->
                <div class="col-md-8 book-info">
                    <h2>
                        <%= foundBook.title %>
                    </h2>
                    <p>
                        <strong>Author:</strong>
                        <%= foundBook.authorId.name || foundBook.authorId.username %>
                    </p>
                    <p><strong>Average Rating:</strong>
                        <% if (foundBook.averageRating> 0) { %>
                            <span class="rating-badge">
                                <%= foundBook.averageRating.toFixed(1) %> / 5
                            </span>
                        <% } else { %>
                                <span class="text-muted">Not rated yet</span>
                        <% } %>
                    </p>
                    <p>
                        <strong>Year Published:</strong>
                        <%= foundBook.yearOfPublication %>
                    </p>
                    <p>
                        <strong>Genre:</strong>
                        <%= foundBook.genre %>
                    </p>
                    <p>
                        <strong>Description:</strong>
                        <%= foundBook.description %>
                    </p>
                </div>
            </div>
        </div>

        <!-- books list pop up -->
        <div class="modal fade" id="shelfModal" tabindex="-1" aria-labelledby="shelfModalLabel" aria-hidden="true">
            <div class="modal-dialog">
                <form action="/booklist" method="post" class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title">Choose a shelf for this book</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body d-grid gap-2">
                        <input type="hidden" name="bookId" value="<%= foundBook._id %>">

                        <% const current=userBookList?.status; %>
                            <button name="status" value="want to read"
                                class="btn <%= current === 'want to read' ? 'btn-primary text-white' : 'btn-outline-dark' %>">Want
                                to read</button>
                            <button name="status" value="reading"
                                class="btn <%= current === 'reading' ? 'btn-warning text-dark' : 'btn-outline-dark' %>">Currently reading</button>
                            <button name="status" value="read"
                                class="btn <%= current === 'read' ? 'btn-success text-white' : 'btn-outline-dark' %>">Read</button>

                            <% if (userBookList) { %>
                                <button name="status" value="remove" class="btn btn-outline-danger mt-2">Remove from shelf</button>
                            <% } %>
                    </div>
                </form>
            </div>
        </div>

    <script src="/js/bootstrap.bundle.min.js"></script>
</body>

</html>