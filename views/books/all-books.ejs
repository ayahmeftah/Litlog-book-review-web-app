<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-LN+7fdVzj6u52u30Kp6M/trliBMCMKTyK833zpbD+pXdCLuTusPj697FH4R/5mcr" crossorigin="anonymous">
    <link rel="stylesheet" href="/css/style.css" />
    <script src="/js/searchBooks.js"></script>
    <title>Books</title>
</head>
<body>
    <%- include("../partials/navbar") %>
    <h1>Browse Books</h1>

    <div class="container my-4">
      <div class="row g-3">
        <div class="col-md-4">
          <input type="text" id="titleInput" class="form-control" placeholder="Search by title">
        </div>
        <div class="col-md-4">
          <input type="text" id="authorInput" class="form-control" placeholder="Search by author">
        </div>
        <div class="col-md-4">
          <select id="genreSelect" class="form-select">
            <option value="">All Genres</option>
            <option value="Fantasy">Fantasy</option>
            <option value="Science Fiction">Science Fiction</option>
            <option value="Mystery">Mystery</option>
            <option value="Horror">Horror</option>
            <option value="Romance">Romance</option>
            <option value="Non-Fiction">Non-Fiction</option>
            <option value="Historical Fiction">Historical Fiction</option>
            <option value="Adventure">Adventure</option>
            <option value="Young Adults">Young Adults</option>
          </select>
        </div>
      </div>
    </div>

    <div class="books-container">
    <% if (books.length === 0) { %>
      <p>No books found</p>
    <% } else { %>
      <% books.forEach(book => { %>
        <div class="book-card" data-title="<%= book.title.toLowerCase() %>"data-author="<%= (book.authorId.name || book.authorId.username).toLowerCase() %>" data-genre="<%= book.genre.toLowerCase() %>">
          <img src="<%= book.BookImage %>" alt="<%= book.title %> Book Cover" class="book-image" />
          <h3 class="book-title"><%= book.title %></h3>
          <p class="book-author">By <%= book.authorId.name || book.authorId.username %></p>
          <p class="book-genre"><%= book.genre %></p>
          <a href="/books/<%= book._id %>">View</a>
        </div>
      <% }) %>
    <% } %>
    </div>

</body>
</html>