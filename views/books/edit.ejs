<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-LN+7fdVzj6u52u30Kp6M/trliBMCMKTyK833zpbD+pXdCLuTusPj697FH4R/5mcr" crossorigin="anonymous">
    <link rel="stylesheet" href="/css/style.css" />
    <title>Edit Book</title>
</head>

<body>
    <%- include("../partials/navbar") %>
    <div class="container mt-5">
  <div class="signup-container">
    <h2 class="text-center mb-4">Edit Book</h2>

    <% if (error) { %>
      <div class="alert alert-danger text-center"><%= error %></div>
    <% } %>

    <form action="/books/<%= book._id %>?_method=put" method="post" enctype="multipart/form-data">
      <div class="row">
        <div class="col-md-4 text-center mb-4">
          <label class="form-label">Current Cover:</label><br>
          <% if (book.BookImage) { %>
            <img src="<%= book.BookImage %>" alt="Current Cover" class="img-fluid rounded mb-3" style="max-height: 200px;"><br>
          <% } else { %>
            <p class="text-muted">No image uploaded.</p>
          <% } %>
          <label for="bookImage" class="form-label">Change Cover:</label>
          <input type="file" name="bookImage" id="bookImage" class="form-control">
        </div>

        <div class="col-md-8">
          <div class="mb-3">
            <label for="title" class="form-label">Title:</label>
            <input type="text" name="title" id="title" class="form-control" value="<%= book.title %>">
          </div>

          <div class="mb-3">
            <label for="yearOfPublication" class="form-label">Year of Publication:</label>
            <input type="number" name="yearOfPublication" id="yearOfPublication" class="form-control" value="<%= book.yearOfPublication %>">
          </div>

          <div class="mb-3">
            <label for="genre" class="form-label">Genre:</label>
            <select name="genre" id="genre" class="form-select">
              <option value="">Select Genre</option>
              <% genres.forEach(oneGenre => { %>
                <option value="<%= oneGenre %>" <%=book.genre === oneGenre ? "selected" : "" %>><%= oneGenre %></option>
              <% }) %>
            </select>
          </div>
        </div>
      </div>

      <div class="mb-3">
        <label for="description" class="form-label">Description:</label>
        <textarea name="description" id="description" rows="4" class="form-control"><%= book.description %></textarea>
      </div>

      <div class="text-center mt-4">
        <button type="submit" class="btn btn-primary me-2">Update Book</button>
        <a href="/books" class="btn btn-secondary">Cancel</a>
      </div>
    </form>
  </div>
</div>

</body>

</html>