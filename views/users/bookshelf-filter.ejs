<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <link rel="stylesheet" href="/css/bootstrap.min.css" />
  <link rel="stylesheet" href="/css/style.css" />
  <title><%= status.charAt(0).toUpperCase() + status.slice(1) %> Shelf</title>
</head>
<body>
<%- include("../partials/navbar") %>

<div class="container mt-5">
  <h3><%= status.charAt(0).toUpperCase() + status.slice(1) %> Books (<%= books.length %>)</h3>

  <% if (books.length === 0) { %>
    <p class="text-muted">No books in this shelf.</p>
  <% } else { %>
    <% books.forEach((entry, i) => { if (entry.bookId) { %>
      <% if (i % 3 === 0) { %><div class="row mb-4"><% } %>

      <div class="col-md-4">
        <div class="card d-flex flex-row align-items-center p-2">
          <img src="<%= entry.bookId.BookImage %>" alt="Cover" class="book-img-card">
          <div>
            <h5 class="mb-1"><%= entry.bookId.title %></h5>
            <p class="mb-1 text-muted"><strong>Status:</strong> <%= entry.status %></p>
            <p class="mb-1"><strong>Author:</strong> <%= entry.bookId.authorId?.name || "Unknown" %></p>
            <p class="mb-1"><strong>Genre:</strong> <%= entry.bookId.genre %></p>
            <p class="mb-1"><strong>Rating:</strong> <%= entry.bookId.averageRating ? (entry.bookId.averageRating.toFixed(1) + ' / 5') + " / 5" : "N/A" %></p>
            <p class="mb-2"><strong>Year:</strong> <%= entry.bookId.yearOfPublication || 'Unknown' %></p>
            <a href="/books/<%= entry.bookId._id %>" class="btn btn-sm btn-primary">View Book</a>
          </div>
        </div>
      </div>

      <% if (i % 3 === 2 || i === books.length - 1) { %></div><% } %>
    <% }}) %>
  <% } %>
</div>
</body>
</html>
